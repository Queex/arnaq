Package: arnaq
Title: Experiment-Aware Quality Control for RNA Sequencing
Version: 1.0.0
Authors@R: c(
    person("Ben J", "Wright", email = "chthonic.games@gmail.com", role = c("aut", "cre"), comment = c(ORCID = "0000-0002-9279-4594")),
